<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_green"
    android:id="@+id/plant_details"
    tools:context=".plant.detail.PlantDetailsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_margin="30dp">

        <TextView
            android:id="@+id/plantNameView"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Plant Name"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/calenderImageView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:src="@drawable/baseline_calendar_month_24" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_gravity="bottom"
        android:background="@color/background"
        android:orientation="vertical"
        android:padding="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:src="@drawable/baseline_wb_sunny_24"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:layout_marginTop="10dp" />

            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="15dp">

                <TextView
                    android:id="@+id/sunlightTextView"
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:text="Sunlight"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/sunlightInfo"
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:text="Medium"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:src="@drawable/baseline_water_drop_24"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:layout_marginTop="10dp" />

            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:orientation="vertical"
                android:layout_marginStart="15dp" >

                <TextView
                    android:id="@+id/WaterTextView"
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:text="Water"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/waterInfo"
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:text="2 times/week"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/PlantDetails"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:text="Plant details..."
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/notification_button"
                style="@style/CustomButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="0"
                android:backgroundTint="@color/button_color"
                android:src="@drawable/baseline_notifications_24"
                />

            <View
                android:layout_width="80dp"
                android:layout_height="0dp" />

            <Button
                android:id="@+id/remove_plant_button"
                style="@style/CustomButton"
                android:layout_width="220dp"
                android:layout_gravity="end"
                android:layout_marginTop="10dp"
                android:tag="login_button"
                android:text="Remove from Garden" />
        </LinearLayout>

    </LinearLayout>
</FrameLayout>